function  worklog {
    if [[ -z $1 ]]; then
        WEEK=$(date +%W)
    elif [[ $1 = 'prev' ]]; then
        WEEK=$(($(date +%W)-1))
    elif [[ $1 = 'next' ]]; then
        WEEK=$(($(date +%W)+1))
    elif [[ $$1 = 'init' ]]; then
        CURRENTWEEK=$(date +%W)
        NEXTWEEK=$(($(date +%W)+1))
        cp ~/projects/wikimedia/worklog/worklog-$CURRENTWEEK.md ~/projects/wikimedia/worklog/worklog-$NEXTWEEK.md
    else 
        WEEK=$1
    fi
    vim ~/projects/wikimedia/worklog/worklog-$(date +%Y-)$WEEK.md
}

